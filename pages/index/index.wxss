/**index.wxss**/
.container {
  height: 100%;
  width: 100%;
  background-color: #fff;
  text-align: center;
}
.textarea{
  border: 1px #aaa solid;
  width: 80%;
  height: 65px;
  z-index: 99;
  -webkit-transition-duration: 2s; /* Safari */
  transition-duration: 2s;
  color: #aaa;
  -webkit-transform: translate(-50%, -0%);
	-moz-transform: translate(-50%, -0%);   
	-ms-transform: translate(-50%, -0%);   
	-o-transform: translate(-50%, -0%);   
	transform: translate(-50%, -0%); 
  position:absolute;
  top: 15%;
  left: 50%;
  padding: 15px;
  margin-top: 15px;
  text-align: center;
  font-size: 35px;
}
.textareac{
  color: #000;
  border-color: #000;
}
.position{
  -webkit-transform: translate(-50%, -50%);   
	-moz-transform: translate(-50%, -50%);   
	-ms-transform: translate(-50%, -50%);   
	-o-transform: translate(-50%, -50%);   
	transform: translate(-50%, -50%); 
  position:absolute;
  top: 80%;
  left: 50%;
}
.start{
  width: 80px;
  height: 80px;
  border-radius: 80px;
  border: 1px #aaa solid;
  line-height: 80px;
  z-index: 99;
}
.back{
  background-color: #aaa;
}
.show{
  animation: show 2s ease forwards;
}
.hide{
  animation: hide 1s ease forwards;
}
@keyframes show{
  0%{ 
      width: 80px;
      height: 80px;
      border-radius: 80px;
  }
  100%{
    width: 1500px;
    height: 1500px;
    border-radius: 1500px;
  }
}
@keyframes hide{
  0%{ 
    width: 1500px;
    height: 1500px;
    border-radius: 1500px;
  }
  100%{
    width: 80px;
    height: 80px;
    border-radius: 80px;
    display: hide
  }
}